// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model contact {
  id          String    @id @default(cuid())
  firstName   String
  phone       String
  lastName    String?
  email       String?
  gender      String?
  website     String?
  nationality String?
  company     company?  @relation(fields: [companyId], references: [id])
  dob         DateTime?
  address     address?  @relation(fields: [addressId], references: [id])
  createdAt   DateTime  @default(now())
  updateDate  DateTime  @updatedAt
  addressId   String?
  companyId   String?
}

model address {
  id         String   @id @default(cuid())
  street     String?
  suite      String?
  city       String?
  zipcode    String?
  createdAt  DateTime @default(now())
  updateDate DateTime @updatedAt

  // Define a relation to the Contact model
  contacts contact[] // This represents a one-to-many relationship
}

model company {
  id          String    @id @default(cuid())
  name        String
  catchPhrase String
  bs          String
  contacts    contact[]
}
